@model TwilioService.Models.Message
<div>
    <label id="resultMessage"></label>
</div>
<div class="jumbotron">
    <h1>Send a Message</h1>
    <p class="lead">This is a Twilio test to send a message</p>

    <div class="form-group">
        <label for="PhoneNumber">Phone Number</label>
        <div>
            @Html.TextBoxFor(x => x.PhoneNumber)
        </div>

    </div>

    <div class="form-group">
        <label for="TextMessage">Text Message</label>
        <div>
            @Html.TextAreaFor(x => x.TextMessage)
        </div>

    </div>

    <button id="btnSendMessage">Send</button>
</div>


@section scripts
{
    <script src="~/Scripts/Site.js" type="text/javascript"></script>
} 
